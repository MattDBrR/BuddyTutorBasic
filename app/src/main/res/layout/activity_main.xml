<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <!-- Vue pour le visage de Buddy (plein écran transparent) -->
    <View
        android:id="@+id/view_face"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000" />

    <!-- Overlay de debug minimal (optionnel, peut être masqué) -->
    <LinearLayout
        android:id="@+id/debug_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#33000000"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtDebugStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debug: Prêt"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtDebugScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score: 0/0"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:gravity="center" />

    </LinearLayout>

</RelativeLayout>